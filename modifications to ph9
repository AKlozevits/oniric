void setup(){
  background(255);
  size(1200,1200, P3D);
  noStroke();
  ellipseMode(CENTER);
  frameRate(60);
}

void draw(){
  translate(width/2,height/2);
  fill(10,10,10,10);
  rotateX(frameCount); //gira alrededor de eje Y rotateY
  rotateY(frameCount);
  rotateZ(frameCount);
  
